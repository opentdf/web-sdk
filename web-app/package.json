{
  "name": "web-app",
  "version": "0.2.0",
  "license": "BSD-3-Clause-Clear",
  "type": "module",
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"  \"tests/*.{js,jsx,ts,tsx}\" \"tests/tests/**/*.{js,jsx,ts,tsx}\"",
    "license-check": "license-checker --production --onlyAllow 'Apache-2.0; BSD; CC-BY-4.0; ISC; MIT'",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "eslint --fix \"src/**/*.{js,jsx,ts,tsx}\"",
    "prepack": "npm run build",
    "preview": "vite preview",
    "test": "vite build && vitest",
    "test:ui": "vite build && vitest --ui"
  },
  "dependencies": {
    "@opentdf/sdk": "file:../lib/opentdf-sdk-0.2.0.tgz",
    "clsx": "^2.1.1",
    "native-file-system-adapter": "^3.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "streamsaver": "^2.0.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.20.0",
    "@playwright/test": "^1.50.1",
    "@rollup/plugin-inject": "^5.0.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/streamsaver": "^2.0.5",
    "@types/wicg-file-system-access": "^2023.10.5",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/ui": "^3.0.6",
    "buffer": "^6.0.3",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-chai-friendly": "^1.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^15.15.0",
    "license-checker": "^25.0.1",
    "playwright": "^1.50.1",
    "prettier": "^3.5.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.1.1",
    "vitest": "^3.0.6"
  }
}
