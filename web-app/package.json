  "license": "BSD-3-Clause-Clear",
  "type": "module",
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"  \"tests/*.{js,jsx,ts,tsx}\" \"tests/tests/**/*.{js,jsx,ts,tsx}\"",
    "license-check": "license-checker --production --onlyAllow 'Apache-2.0; BSD; CC-BY-4.0; ISC; MIT'",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "eslint --fix \"src/**/*.{js,jsx,ts,tsx}\"",
    "preview": "vite preview",
    "test": "vite build && vitest",
    "test:ui": "vite build && vitest --ui"
  },
  "dependencies": {
    "@opentdf/client": "file:../lib/opentdf-client-0.4.0.tgz",
    "native-file-system-adapter": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.29.2",
    "@rollup/plugin-inject": "^5.0.3",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/wicg-file-system-access": "^2020.9.5",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "@vitejs/plugin-react": "^3.0.1",
    "@vitest/ui": "^0.27.2",
    "buffer": "^6.0.3",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "license-checker": "^25.0.1",
    "playwright": "^1.29.2",
    "prettier": "^2.8.3",
    "typescript": "^4.9.4",
    "vite": "^4.0.4",
    "vitest": "^0.27.2"
  }
}
