{
  "name": "@opentdf/client",
  "version": "0.2.2",
  "description": "Access and generate tdf protected content",
  "homepage": "https://github.com/opentdf/client-web",
  "bugs": {
    "url": "https://github.com/opentdf/client-web/issues"
  },
  "files": [
    "dist/*/package.json",
    "dist/client/*",
    "dist/esm/src/**",
    "dist/server/*",
    "dist/types/src/**",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opentdf/client-web.git",
    "directory": "lib"
  },
  "license": "BSD-3-Clause-Clear",
  "author": "Virtru",
  "browser": "./dist/client/client-web.js",
  "main": "./dist/server/node.cjs.js",
  "module": "./dist/esm/src/index.node.js",
  "types": "./dist/types/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/client/client-web.js",
      "require": "./dist/server/node.cjs.js",
      "types": "./dist/types/src/index.d.ts"
    },
    "./nano": {
      "import": "./dist/esm/src/index.js",
      "require": "./dist/server/node-nano.cjs.js",
      "types": "./dist/types/src/index.d.ts"
    },
    "./nano-node-esm": {
      "import": "./dist/esm/src/index.node.js",
      "types": "./dist/types/src/index.d.ts"
    }
  },
  "scripts": {
    "build": "npm run clean && webpack && tsc -p tsconfig-esm.json && node prepareNodeESM.js && ../scripts/add-module-types.sh esm && ../scripts/fill-version.sh",
    "clean": "rm -rf {build,dist}",
    "doc": "typedoc --out dist/docs src/index.ts",
    "format": "prettier --write \"{facade,src,tdf3,test}/**/*.ts\"",
    "license-check": "license-checker --production --onlyAllow 'Apache-2.0; BSD; CC-BY-4.0; ISC; MIT'",
    "lint": "eslint ./{src,test}/**/*.ts",
    "prepack": "npm run build",
    "test": "npm run clean && tsc -p tsconfig-esm.json && web-test-runner && npm run test:tdf3",
    "test:watch": "web-test-runner --watch",
    "test:tdf3": "nyc mocha --file tdf3/test/setup.js --require @babel/register --timeout 300000",
    "watch": "(trap 'kill 0' SIGINT; npm run build && (npm run build:watch & npm run test -- --watch))"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.75.0",
    "axios": "^0.26.1",
    "browser-fs-access": "^0.30.2",
    "buffer-crc32": "^0.2.13",
    "events": "^3.3.0",
    "jose": "^4.8.1",
    "jsonschema": "^1.4.0",
    "node-forge": "^1.3.1",
    "ua-parser-js": "^1.0.2",
    "uuid": "~8.3.2",
    "web-streams-node": "^0.4.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.18.2",
    "@babel/plugin-proposal-class-properties": "^7.17.12",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-typescript": "^7.17.12",
    "@babel/register": "^7.17.7",
    "@babel/runtime-corejs3": "^7.18.3",
    "@babel/types": "^7.18.4",
    "@esm-bundle/chai": "~4.3.4-fix.0",
    "@types/chai": "~4.3.0",
    "@types/expect": "^24.3.0",
    "@types/jsonwebtoken": "~8.5.8",
    "@types/mocha": "~9.1.0",
    "@types/node-forge": "^1.0.2",
    "@types/sinon": "~10.0.11",
    "@types/uuid": "~8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "@web/dev-server-rollup": "~0.3.15",
    "@web/test-runner": "~0.13.27",
    "@web/test-runner-commands": "~0.6.1",
    "audit-ci": "^6.2.0",
    "babel-loader": "^8.2.5",
    "babel-plugin-module-resolver": "^4.1.0",
    "buffer": "^6.0.3",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "colors": "^1.4.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "filehound": "^1.17.5",
    "jszip": "^3.9.1",
    "license-checker": "^25.0.1",
    "mocha": "^9.2.2",
    "node-fetch": "^3.2.4",
    "nyc": "^15.1.0",
    "prettier": "^2.6.2",
    "process": "^0.11.10",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.1",
    "send": "^0.18.0",
    "sinon": "~13.0.1",
    "streamsaver": "^2.0.6",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.7.0",
    "tsify": "^5.0.4",
    "typedoc": "^0.22.15",
    "typescript": "4.6.3",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-node-externals": "^3.0.0"
  }
}
