{
  "name": "@opentdf/cli",
  "version": "1.1.0",
  "description": "Node based CLI for opentdf",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opentdf/client-web.git",
    "directory": "cli"
  },
  "license": "BSD-3-Clause-Clear",
  "author": "Virtru",
  "main": "dist/src/cli.js",
  "type": "module",
  "files": [
    "dist/src/**",
    "bin/opentdf.mjs"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "prepack": "npm run build",
    "test": "npm run build && mocha dist/**/*.spec.js",
    "watch": "(trap 'kill 0' SIGINT; npm run build && (npm run build:watch & npm run test -- --watch))",
    "format": "prettier --write \"{src,tests}/**/*.ts\"",
    "license-check": "license-checker --production --onlyAllow 'Apache-2.0; BSD; CC-BY-4.0; ISC; MIT'",
    "lint": "eslint ./{src,tests}/**/*.ts"
  },
  "bin": {
    "opentdf": "./bin/opentdf.mjs"
  },
  "devDependencies": {
    "@esm-bundle/chai": "4.3.4-fix.0",
    "@types/mocha": "10.0.1",
    "@types/node": "^20.4.1",
    "@types/readable-stream": "^2.3.15",
    "@types/sinon": "^10.0.15",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "chai": "^4.3.7",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "license-checker": "^25.0.1",
    "mocha": "^10.2.0",
    "prettier": "^3.0.0",
    "sinon": "^15.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@opentdf/client": "file:../lib/opentdf-client-1.0.1.tgz",
    "yargs": "^17.7.2"
  }
}
