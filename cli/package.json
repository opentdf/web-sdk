{
  "name": "@opentdf/cli",
  "version": "0.4.0",
  "description": "Node based CLI for opentdf",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opentdf/client-web.git",
    "directory": "cli"
  },
  "license": "BSD-3-Clause-Clear",
  "author": "Virtru",
  "main": "dist/src/cli.js",
  "type": "module",
  "files": [
    "dist/src/**",
    "bin/opentdf.mjs"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "prepack": "npm run build",
    "test": "npm run build && mocha dist/**/*.spec.js",
    "watch": "(trap 'kill 0' SIGINT; npm run build && (npm run build:watch & npm run test -- --watch))",
    "format": "prettier --write \"{src,test}/**/*.ts\"",
    "license-check": "license-checker --production --onlyAllow 'Apache-2.0; BSD; CC-BY-4.0; ISC; MIT'",
    "lint": "eslint ./{src,test}/**/*.ts"
  },
  "bin": {
    "opentdf": "./bin/opentdf.mjs"
  },
  "devDependencies": {
    "@esm-bundle/chai": "4.3.4-fix.0",
    "@types/mocha": "10.0.0",
    "@types/node": "^18.11.6",
    "@types/readable-stream": "^2.3.14",
    "@types/sinon": "^10.0.13",
    "@types/yargs": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "chai": "^4.3.6",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "license-checker": "^25.0.1",
    "mocha": "^10.1.0",
    "prettier": "^2.7.1",
    "sinon": "^14.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@opentdf/client": "file:../lib/opentdf-client-0.4.0.tgz",
    "yargs": "^17.6.0"
  }
}
